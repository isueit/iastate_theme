{#
/**
 * @file
 * Default theme implementation to display a menu.
 *
 * Available variables:
 * - menu_name: The machine name of the menu.
 * - items: A nested list of menu items. Each menu item contains:
 *   - attributes: HTML attributes for the menu item.
 *   - below: The menu item child items.
 *   - title: The menu link title.
 *   - url: The menu link url, instance of \Drupal\Core\Url
 *   - localized_options: Menu link localized options.
 *   - is_expanded: TRUE if the link has visible children within the current
 *     menu tree.
 *   - is_collapsed: TRUE if the link has children within the current menu tree
 *     that are not currently visible.
 *   - in_active_trail: TRUE if the link is in the active trail.
 *
 * @ingroup themeable
 */
#}
{% import _self as menus %}

{#
  We call a macro which calls itself to render the full tree.
  @see http://twig.sensiolabs.org/doc/tags/macro.html
#}

{{ menus.menu_links(items, attributes, 0) }}

{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    {% if menu_level == 0 %} {# If the menu has only one level. #}
      <ul> {#role="menubar" {{ attributes.addClass('nav navbar-nav menubar') }}#}
	{% elseif menu_level == 1 %}
      <ul aria-hidden ="true"> {#role="menu" class="isu-dropdown-menu"#}
      <li class="site-header__mega-menu-main-nav-dropdown-back-wrap">
          <button class="site-header__mega-menu-main-nav-dropdown-back" tabindex="-1">
            <span class="site-header__mega-menu-main-nav-dropdown-back-icon" aria-hidden="true">&lt;</span>
            <span class="site-header__mega-menu-main-nav-dropdown-back-label">Back</span>
            <span class="visible-for-screen-readers"> to top level of menu</span>
          </button>
        </li>
	{% else %}
	  <ul aria-hidden="true"> {#role="submenu" class="isu-dropdown-menu isu-dropdown-submenu"#}
    {% endif %}

    {% for item in items %}
      {# Assign classes based on if the item is an open parent, closed parent,
      active, or a has a submenu. #}
      {%
        set li_classes = [
          menu_level ? 'dropdown-item isu-dropdown-item' : 'nav-item',
          item.below ? 'isu-dropdown',
        ]
      %}

      {% if item.below %} {# If the item has children, it will be a dropdown. #}
        <li> {#role="menuitem" {{ item.attributes.addClass(li_classes).setAttribute('aria-expanded', 'false').setAttribute('aria-haspopup', 'true') }}#}
          {% if item.url and item.title %}
            <a href="{{ item.url }}"
               aria-expanded="false"
               class="isu-dropdown-toggle"
               data-index="{{ loop.index }}"
               tabindex="0">
              {{ item.title }}
            </a>
          {% endif %}

          {{ menus.menu_links(item.below, item.attributes, menu_level + 1) }}
          </li>
          {% elseif menu_level == 1 %}
          <li> {#role="menuitem" {{ item.attributes.addClass(li_classes).setAttribute('aria-expanded', 'false').setAttribute('aria-haspopup', 'true') }}#}
          {% if item.url and item.title %}
            <a href="{{ item.url }}"
               aria-expanded="false"
               class="link-territory"
               data-index="{{ loop.index }}"
               tabindex="0">
              {{ item.title }}
            </a>
          {% endif %}

          {{ menus.menu_links(item.below, item.attributes, menu_level + 1) }}
          </li>
      {% else %} {# If the item does not have children, it will not be a dropdown. #}
        <li role="menuitem" {{ item.attributes.addClass('dropdown-item isu-dropdown-item').setAttribute('aria-haspopup', 'false') }}>
		  <a class="nav-link isu-nav-link" href="{{ item.url|render|trim ?: '#' }}">{{ item.title }}</a>
      {% endif %}
	  </li>

    {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}








